<div class="masthead clearfix">
  <div class="inner">
    <h3 class="masthead-brand">Title</h3>
    <nav class="nav nav-masthead">
      <% if parent_logged_in? %>
        <a class="nav-link" href="/">Home</a>
        <a class="nav-link" href="/parents/<%= current_parent.id %>"><%= current_parent.name %></a>
        <form class="nav-link" action="/parents/logout" method="POST"><input type="hidden" name="_method" value="delete"><button type="submit" name="logout" value="logout" class="logout">Logout</button></form>
      <% elsif volunteer_logged_in? %>
        <a class="nav-link" href="/">Home</a>
        <a class="nav-link" href="/volunteers/<%= current_volunteer.id %>"><%= current_volunteer.name %></a>
        <form class="nav-link" action="/volunteers/logout" method="POST"><input type="hidden" name="_method" value="delete"><button type="submit" name="logout" value="logout" class="logout">Logout</button></form>
      <% else %>
        <a class="nav-link active" href="/">Home</a>
      <% end %>
    </nav>
  </div>
</div>
