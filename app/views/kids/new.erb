<div class="login-wrapper">
  <div class="card p-t-80 form-wrapper">
    <div class="card-block">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <h2>Register Child</h2>
          <form action="/parents/<%= @parent.id %>/kids" method="post">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="kid[name]" value="" id="name" class="form-control">
            </div>

            <div class="form-group">
              <label for="phone">age</label>
              <input type="number" name="kid[phone]" value="" id="phone" class="form-control">
            </div>

            <div class="form-group">
              <label for="location">Location</label>
              <input type="text" name="kid[location]" value="" id="location" class="form-control">
            </div>

            <div class="form-group">
              <label for="specific_needs">specific Needs</label>
              <input type="textarea" name="kid[specific_needs]" value="" id="specific_needs" class="form-control">
            </div>

            <div class="form-group">
              <button type="submit" name="button" class="btn form-btn">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
